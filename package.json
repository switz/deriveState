{
  "name": "@switz/driver",
  "main": "dist/index.js",
  "module": "dist/driver.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./debug": {
      "import": {
        "types": "./dist/debug.d.ts",
        "default": "./dist/debug.esm.js"
      },
      "require": {
        "types": "./dist/debug.d.ts",
        "default": "./dist/debug.js"
      }
    }
  },
  "sideEffects": false,
  "private": false,
  "author": {
    "name": "Daniel Saewitz (switz)",
    "url": "https://saewitz.com"
  },
  "version": "0.6.0-canary.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/switz/driver.git"
  },
  "license": "MIT",
  "scripts": {
    "prepublish": "build",
    "test": "bun test && bun run test-types",
    "test-types": "tsd -t './src/index.ts' -f test/",
    "size": "size-limit",
    "build": "dts build --entry ./src/index.ts --entry ./src/debug.ts",
    "prepare": "dts build --entry ./src/index.ts --entry ./src/debug.ts"
  },
  "engines": {
    "node": " >=14.13.1 || >=16.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@switz/eslint-config": "^8.0.1",
    "bun-types": "^0.5.0",
    "dts-cli": "^2.0.0",
    "prettier": "^2.8.7",
    "size-limit": "^8.2.4",
    "tsd": "^0.28.1",
    "typescript": "^5.0.3"
  },
  "size-limit": [
    {
      "path": "dist/driver.esm.js",
      "limit": "1 kB",
      "brotli": true
    }
  ]
}
